<form class="form" action="/" method="post">
    <div class="form-group">
        <input type="text" name="jobTitle" class="form-control" placeholder="Job title" />
    </div>
    <div class="form-group">
        <input type="text" name="firstName" class="form-control" placeholder="First name" />
    </div>
    <div class="form-group">
        <input type="text" name="lastName" class="form-control" placeholder="Last name" />
    </div>
    <div class="form-group">
        <input type="email" name="email" class="form-control" placeholder="Email" />
    </div>
    <div class="form-group">
        <input type="text" name="addressLine1" class="form-control" placeholder="Address line 1" />
    </div>
    <div class="form-group">
        <input type="text" name="addressLine2" class="form-control" placeholder="Address line 2" />
    </div>
    <div class="form-group">
        <input type="text" name="postCode" class="form-control" placeholder="Post code" />
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="formCheck"name="termsAndConditions"/>
        <label class="form-check-label terms-conditions-label" for="formCheck">
            Please confirm that you have read and agreed to the Terms and Conditions 
            and Privacy Policy by ticking the box.
        </label>
    </div>
</form>